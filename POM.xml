<project>
  <!-- model version is always 4.0.0 for Maven 2.x POMs -->
  <modelVersion>4.0.0</modelVersion>
 
  <!-- project coordinates, i.e. a group of values which uniquely identify this project -->
  <groupId>no.delesalg</groupId>
  <!-- prosjekt mappe (modul)  jar-navn -->
  <artifactId>delesalg</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  
  <name>Delesalg</name>
  <description>Håndtering av deler</description>
  
  <!-- Dette er en (parent) pom og ikke pom til et prosjekt med kode. -->
  <packaging>pom</packaging>
 
   <!-- Children ref til 'parent' er parents project coordinates.  -->
  <!-- version og groupId arves, kun artifactId må oppgis-->

  <!-- Moduler som også skal være med i bygget -->
  <modules>
	<module>maler</module>
	<!-- module>deler</module-->
  </modules>

  <!-- properties som kan brukes i andre pommer slik: ${thing.prop} -->
  <properties>
	<thing.prop>value</thing.prop>
  </properties>
  
  <!-- library dependencies -->
  <dependencies>
	<dependency>
		<groupId>org.hsqldb</groupId>
		<artifactId>hsqldb</artifactId>
		<version>2.3.2</version>
	</dependency>


    <dependency>
      <!-- coordinates of the required library -->
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <!-- this dependency is only used for running and compiling tests -->
      <scope>test</scope>
 
    </dependency>
  </dependencies>
  
  <!-- Bygging av appen -->
  <build>
    <plugins>
  
	  <!-- Hvilken kompilator som skal brukes (default 1.3)
			Hva inneholder eclipse-plugin: mvn eclipse:help -Ddetail=true -Dgoal=<goalname>
	  -->
	  <plugin>
		<version>3.1</version>		
        <!-- <groupId>org.apache.maven.plugins</groupId> -->
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>         
		  <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
	  
	  <!-- Eclipse oppsett -->	  
	  <plugin>
        <!-- <groupId>org.apache.maven.plugins</groupId> -->
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>2.9</version>
        <configuration>
          <sourceExcludes>
            <sourceExclude>**/.git/**</sourceExclude>
          </sourceExcludes>
          <sourceIncludes>
            <sourceInclude>**/*.myExtension</sourceInclude>
          </sourceIncludes>
        </configuration>
      </plugin>
	  
    </plugins>
  </build>
</project>