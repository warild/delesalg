<project>
  <!-- model version is always 4.0.0 for Maven 2.x POMs -->
  <modelVersion>4.0.0</modelVersion>
 
  <!-- project coordinates, i.e. a group of values which uniquely identify this project -->
  <groupId>no.onlevel</groupId>
  <!-- prosjekt mappe (modul)  jar-navn -->
  <artifactId>deler</artifactId>
  <version>1.0</version>
  
  <!-- Dette er en (parent)pom og ikke et prosjekt med kode. -->
  <!-- Children ref til 'parent' er parents project coordinates.  -->
  <!-- version og groupId(arves) kun artifactId må oppgis-->
  <packaging>pom</packaging>
 
  <!-- properties som kan brukes i andre pommer slik: ${thing.prop} -->
  <properties>
	<thing.prop>value</thing.prop>
  </properties>
 
  <!-- library dependencies -->
  <dependencies>
    <dependency>
 
      <!-- coordinates of the required library -->
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
 
      <!-- this dependency is only used for running and compiling tests -->
      <scope>test</scope>
 
    </dependency>
  </dependencies>
  
  <!-- Bygg -->
  <build>
    <plugins>
  
	  <!-- Hvilken kompilator som skal brukes (default 1.3) -->
	  <plugin>
        <!-- <groupId>org.apache.maven.plugins</groupId> -->
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>         
		  <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>